<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
      <span><%= link_to "edit a task", edit_task_path(task) %><span>
        <span><%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %><span>
    </li>
  <% end %>
</ul>

<h4><%= link_to "+ add a new task", tasks_new_path %></h4>

